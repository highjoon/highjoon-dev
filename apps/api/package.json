{
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "pino-pretty": "^13.0.0",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "5.4.5"
  },
  "name": "@highjoon-dev/api",
  "packageManager": "pnpm@9.15.0",
  "private": true,
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "lint:fix": "eslint './src/**/*.{js,jsx,ts,tsx}' --fix",
    "prettier:fix": "prettier './src/**/*.{js,jsx,ts,tsx}' --write",
    "start": "node dist/index.js"
  },
  "tsup": {
    "clean": true,
    "entry": [
      "!src/**/*.test.*",
      "!src/**/__tests__/**",
      "src"
    ],
    "sourcemap": true,
    "splitting": false
  },
  "version": "1.0.0"
}
