{
  "dependencies": {
    "@prisma/client": "6.3.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@swc/core": "^1.10.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.3.1",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "5.4.5"
  },
  "name": "@highjoon-dev/api",
  "packageManager": "pnpm@9.15.0",
  "private": true,
  "scripts": {
    "build": "tsup",
    "db:pull": "dotenv -e .env.production -- prisma db pull",
    "db:push": "dotenv -e .env.production -- prisma db push",
    "dev": "dotenv -e .env.development tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "lint:fix": "eslint './src/**/*.{js,jsx,ts,tsx}' --fix",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev --name init",
    "postinstall": "prisma generate",
    "prettier:fix": "prettier './src/**/*.{js,jsx,ts,tsx}' --write",
    "start": "pnpm build && dotenv -e .env.production node dist/index.js"
  },
  "tsup": {
    "clean": true,
    "entry": [
      "!src/**/*.test.*",
      "!src/**/__tests__/**",
      "src"
    ],
    "sourcemap": true,
    "splitting": false
  },
  "version": "1.0.0"
}
